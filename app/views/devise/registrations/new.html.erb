<div class="profile">
  <div class="profilebox">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :first_name, autofocus: true, placeholder: 'Firstname' %>
        <%= f.text_field :last_name, autofocus: true, placeholder: 'Lastname' %>
      </div>

      <div class="field">
        <%= f.text_field :description, autofocus:true, placeholder: 'Your Story'%>
      </div>

      <div class="field">
        <%= f.text_field :username, autofocus:true, placeholder: 'Username'%>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm' %>
      </div>
      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <br />
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      <div class="field">
      Already Registered?  <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>


</div>
